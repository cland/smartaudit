@model SmartAudit.ViewModel.AuditDefinitionFormViewModel
@{
    ViewBag.Title = "Audit Definition Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Audit Definition</h2>

@using (Html.BeginForm("SaveAudit", "Definition"))
{
    @Html.ValidationSummary(true, "Please fix the errors first!");
    <div class="form-group">
        @Html.LabelFor(m => m.AuditDefinition.Name)
        @Html.TextBoxFor(m => m.AuditDefinition.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.AuditDefinition.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.AuditDefinition.Description)
        @Html.TextAreaFor(m => m.AuditDefinition.Description, new { @class = "form-control" })        
    </div>

    <div class="checkbox">
        <label>
            @Html.CheckBoxFor(m => m.AuditDefinition.IsActive) Make Audit Available for use (Active)
        </label>
    </div>


    @Html.HiddenFor(m => m.AuditDefinition.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-success">Save</button>
    <button type="button" onclick="document.location.href='/Definition'" class="btn btn-danger">Cancel</button>
}

@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
}